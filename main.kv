                orientation: "vertical"
                MDLabel:
                    text: "Update After Service"
                    font_size: "16dp"
                    halign: "center"
                    font_name: 'fonts/Montserrat-Bold.ttf'
                    color: "#000000"
                    pos_hint: {"center_x":.5, "center_y": .95}
